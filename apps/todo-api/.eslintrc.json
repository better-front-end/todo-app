{
	"extends": ["../../.eslintrc.json"],
	"ignorePatterns": ["!**/*"],
	"overrides": [
		{
			"files": ["*.ts", "*.tsx", "*.js", "*.jsx"]
		},
		{
			"files": ["*.ts", "*.tsx"]
		},
		{
			"files": ["*.js", "*.jsx"]
		},
		{
			"files": ["*.spec.ts", "*.spec.js"],
			"plugins": ["jest"],
			"extends": ["plugin:jest/recommended", "plugin:jest/style"],
			"env": {
				"jest": true
			}
		}
	]
}
